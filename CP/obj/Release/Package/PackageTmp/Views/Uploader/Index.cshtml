
@{
    ViewBag.Title = "Uploader Items";
    int? SrNo = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <br />
                <h3 class="panel-title">Uploader Items</h3>
                <br />
            </div>
            <div class="panel-body">

                <table class="table table-striped table-bordered" id="Items">

                    <thead>
                        <tr>
                            <th><a href="#">Sr No.</a></th>
                            <th><a href="#">Item Code</a></th>
                            <th><a href="#">Label</a></th>
                            <th><a href="#">Position</a></th>
                       
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.DataList != null && ViewBag.DataList.Count > 0)
                        {

                            foreach (var viewmodel in ViewBag.DataList)
                            {
                                <tr>

                                    <td>@(SrNo++)</td>
                                    <td>@viewmodel.Code</td>
                                    <td>@viewmodel.Label</td>
                                    <td>@viewmodel.Position</td>                                   
                                </tr>
                            }
                        }
                        else
                        {
                            <tr class="text-center"><td colspan="8">No Records Found</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        dataTable("#Items");

    });
</script>

