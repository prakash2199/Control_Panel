@model EquiModels.UploaderItemsViewModel 
@{
    ViewBag.Title = "Uploader Items";
    int? SrNo = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <br />
                <h3 class="panel-title">Uploader Items</h3>
                <br />
                <br />
                <div class="col-xs-2" style="margin-top:5px;">
                    @Html.Label("Uploader Code")
                </div>

                <div class="col-xs-2" style="margin-top:5px;">
                    @Html.DropDownListFor(x => x.Code, ViewBag.Uploaders as SelectList, new { @class = "form-control demo-cs-multiselect", @maxlength = "4", @placeholder = "Sector Name"})
                </div>

                <br />
            </div>
            <div class="panel-body">
                <table class="table table-striped table-bordered" id="UploaderItems" data-show-fullscreen="true" data-show-columns="true" data-show-export="true" data-click-to-select="true" data-detail-formatter="detailFormatter">
    
                        <thead>
                            <tr>
                                <th data-field="">Sr No.</th>
                                <th data-field="ItemCode">Item Code</th>
                                <th data-field="Label">Label</th>
                                <th data-field="Position">Row No</th>

                            </tr>
                        </thead>
                    </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShowBootstrapTable("Items","GetAllUploadItemsList", "Non-Banking", '#UploaderItems');

    });
