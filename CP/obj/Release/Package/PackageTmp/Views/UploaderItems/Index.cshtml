
@model EquiModels.UploaderItemsViewModel
@{
    ViewBag.Title = "Uploader Items";
    int? SrNo = 1;
}

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading">
                <br />
                <h3 class="panel-title">Uploader Items</h3>
            </div>
            <div class="panel-body">

                <div class="col-xs-3" style="margin-top:19px;margin-left: -16px;">
                    @Html.DropDownListFor(x => x.Code, ViewBag.Uploaders as SelectList,new { @class = "form-control", @maxlength = "4", @Id = "Code" })
                </div>

                <table class="table table-striped table-bordered" id="UploaderItems" data-show-fullscreen="true" data-show-columns="true" data-show-export="true" data-click-to-select="true">

                    <thead>
                        <tr>
                            <th data-field="SerialNo" data-sortable="true">Sr No.</th>
                            <th data-field="ItemCode" data-sortable="true">Item Code</th>
                            <th data-field="Label" data-sortable="true">Label</th>
                            <th data-field="Position" data-sortable="true">Row No</th>

                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        ShowBootstrapTable("UploaderItems", "GetAllUploadItemsList", "Non-Banking", 'UploaderItems');
       
    });
 
    $("#Code").change(function () {
        $('#UploaderItems').bootstrapTable('refresh',{
            url: "./" + "UploaderItems" + "/" + "GetAllUploadItemsList" + "?Status=" + this.value

        });
     
    });
   
</script>

